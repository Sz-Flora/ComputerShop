<Page x:Class="ComputerShop.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0"
       Grid.Column="0"
       Grid.ColumnSpan="3"
       Content="Regisztrálj be!"
       FontWeight="Bold"
       FontSize="20"
       HorizontalAlignment="Center"
       Foreground="Blue"
/>
        <Label Grid.Row="1"
    Grid.Column="0"
    Content="Felhasználónév:"
    FontWeight="Bold"
    FontSize="20"
/>
        <TextBox
    x:Name="usernameTextBox"
    Grid.Row="1"
    Grid.Column="1"
    FontSize="15"
    />
        <Label Grid.Row="2"
    Grid.Column="0"
    Content="Teljes név:"
    FontWeight="Bold"
    FontSize="20"
/>
        <TextBox
    x:Name="fullnameTextBox"
    Grid.Row="2"
    Grid.Column="1"
    FontSize="15"
    />
        <Label Grid.Row="3"
    Grid.Column="0"
    Content="Email:"
    FontWeight="Bold"
    FontSize="20"
/>
        <TextBox
    x:Name="emailTextBox"
    Grid.Row="3"
    Grid.Column="1"
    FontSize="15"
    />

        <Label Grid.Row="4"
    Grid.Column="0"
    Content="Jelszó:"
    FontWeight="Bold"
    FontSize="20"
/>
        <PasswordBox
    x:Name="passwordTextBox"
    Grid.Row="4"
    Grid.Column="1"
    FontSize="15"
    />
        <StackPanel Grid.Row="5" Grid.Column="1" Margin="20">
            <Button
           x:Name="regButton"
           Content="Regisztráció"
           FontWeight="Bold"
           FontSize="15"
           Width="90"
           HorizontalAlignment="Right"
           Foreground="Blue"
           Click="regButton_Click"
           />
        </StackPanel>
    </Grid>
</Page>
