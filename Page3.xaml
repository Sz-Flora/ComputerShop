<Page x:Class="ComputerShop.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3">

    <Grid>
        <DataGrid x:Name="usersDataGrid" Margin="20"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"                
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Felhasználónév" Binding="{Binding UserName}"/>
                <DataGridTextColumn Header="Teljesnév" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Regisztráció" Binding="{Binding RegTime}"/>

                <DataGridTemplateColumn Header="Töröl">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="X" x:Name="DeleteUserButton" Foreground="White" Background="Red" FontWeight="bold" FontSize="15" Click="DeleteUserButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Módosít">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="M" x:Name="UpdateUserButton" Foreground="White" Background="Black" FontWeight="bold" FontSize="15" Click="UpdateUserButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
