<Page x:Class="ComputerShop.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="550"
      Title="Login"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Content="Jelentkezz be!"
               FontWeight="Bold"
               FontSize="20"
               HorizontalAlignment="Center"
               Foreground="Blue"
        />
        <Label Grid.Row="1"
            Grid.Column="0"
            Content="Felhasználónév:"
            FontWeight="Bold"
            FontSize="20"
        />
        <TextBox
            x:Name="usernameTextBox"
            Grid.Row="1"
            Grid.Column="1"
            FontSize="15"
            />

        <Label Grid.Row="2"
            Grid.Column="0"
            Content="Jelszó:"
            FontWeight="Bold"
            FontSize="20"
        />
        <PasswordBox
            x:Name="passwordTextBox"
            Grid.Row="2"
            Grid.Column="1"
            FontSize="15"
            />
        <StackPanel Grid.Row="4" Grid.Column="1" Margin="20">
            <TextBlock HorizontalAlignment="Right" FontSize="15px" FontFamily="Calibri" FontWeight="Bold" Padding="5">
                <Hyperlink x:Name="regLink" 
                           Click="regLink_Click">
                    Regisztrálok
                </Hyperlink>
            </TextBlock>
            <Button
                   x:Name="loginButton"
                   Content="Belépés"
                   FontWeight="Bold"
                   FontSize="15"
                   Width="70"
                   HorizontalAlignment="Right"
                   Foreground="Blue"
                   Click="loginButton_Click"
                   />
        </StackPanel>
    </Grid>
</Page>
